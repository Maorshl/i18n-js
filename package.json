{
  "name": "i18n-js",
  "version": "4.0.0-alpha.1",
  "description": "A small library to provide I18n on JavaScript.",
  "main": "./dist/import/index.js",
  "browser": "./dist/browser/index.js",
  "exports": {
    "import": "./dist/import/index.js",
    "require": "./dist/require/index.js"
  },
  "files": [
    "dist/**/*",
    "typings/**/*"
  ],
  "typings": "./typings",
  "repository": "https://github.com/fnando/i18n",
  "author": "Nando Vieira <me@fnando.com>",
  "license": "MIT",
  "scripts": {
    "docs": "typedoc src",
    "test": "jest --watch",
    "test:ci": "jest",
    "clean": "rm -rf ./dist",
    "build:browser": "webpack --output-path ./dist/browser/index.js --mode production --entry ./dist/import/index.js --output-library-type var --output-library-name I18n --devtool source-map",
    "build:require": "tsc --outDir ./dist/commonjs --module commonjs",
    "build:import": "tsc --outDir ./dist/import --module ESNext",
    "build": "yarn clean && yarn build:import && yarn build:browser && yarn build:require && yarn docs",
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "eslint --config .eslintrc.js --max-warnings 0 'src/**/*'",
    "lint": "yarn lint:typescript && yarn lint:eslint"
  },
  "devDependencies": {
    "@fnando/codestyle": "*",
    "@fnando/eslint-config-codestyle": "*",
    "@types/jest": "*",
    "@types/lodash": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "jest": "*",
    "jest-filename-transform": "*",
    "prettier": "*",
    "ts-jest": "*",
    "typedoc": "*",
    "typescript": "*",
    "webpack": "*",
    "webpack-cli": "*"
  },
  "dependencies": {
    "lodash": "*"
  }
}
